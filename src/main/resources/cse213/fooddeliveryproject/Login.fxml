<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="cse213.fooddeliveryproject.Sadnan_2321524.LoginController"
            prefWidth="400" prefHeight="300">
    <VBox spacing="10" alignment="CENTER" layoutX="50" layoutY="40" prefWidth="300" AnchorPane.leftAnchor="50" AnchorPane.rightAnchor="50">
        <Label text="Login to Dashboard" style="-fx-font-size: 18px;"/>
        <TextField fx:id="usernameField" promptText="Username" maxWidth="200"/>
        <PasswordField fx:id="passwordField" promptText="Password" maxWidth="200"/>
        <ComboBox fx:id="roleComboBox" promptText="Select Role" maxWidth="200"/>
        <Button text="Login" onAction="#handleLogin" maxWidth="200"/>
        <Label fx:id="statusLabel" textFill="red" />
    </VBox>
</AnchorPane>
