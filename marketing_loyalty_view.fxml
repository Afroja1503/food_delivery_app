<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns="http://javafx.com/javafx/23"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="fooddelivery.fooddeliveryapp.MarketingLoyaltyController">

    <VBox spacing="10" alignment="CENTER" AnchorPane.topAnchor="0"
          AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0">
        <padding><Insets top="20" left="20" right="20" bottom="20"/></padding>

        <Label text="Loyalty and Referral Program"
               style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

        <TextField fx:id="txtRewardType" promptText="Reward Type (Discount, Cashback, etc.)" prefWidth="300"/>
        <TextField fx:id="txtConditions" promptText="Conditions (e.g. Min Purchase)" prefWidth="300"/>
        <TextField fx:id="txtExpiry" promptText="Expiry Date (e.g. 2025-12-31)" prefWidth="300"/>

        <Button text="Launch Loyalty Program" onAction="#handleLoyaltyLaunch" prefWidth="300"/>
        <Label fx:id="lblLoyaltyMessage" style="-fx-text-fill: green;"/>
    </VBox>
</AnchorPane>
