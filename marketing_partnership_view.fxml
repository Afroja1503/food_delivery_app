<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fooddelivery.fooddeliveryapp.MarketingPartnershipController">

    <VBox alignment="CENTER" spacing="10" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0">
        <padding><Insets bottom="20" left="20" right="20" top="20" /></padding>

        <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Partner Promotion Deal" />

        <TextField fx:id="txtRestaurantName" prefWidth="300" promptText="Restaurant Name" />
        <TextField fx:id="txtDealType" prefWidth="300" promptText="Deal Type (Ex:Discount)" />
        <TextArea fx:id="txtDealDetails" prefRowCount="3" prefWidth="300" promptText="Deal Details" />
        <TextField fx:id="txtDuration" prefWidth="300" promptText="Duration (e.g. 7 days)" />

        <Button onAction="#handleSendDeal" prefWidth="300" text="Send Deal Proposal" />
        <Label fx:id="lblPartnerMessage" style="-fx-text-fill: green;" />
    </VBox>
</AnchorPane>
