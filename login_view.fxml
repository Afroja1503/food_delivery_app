<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane style="-fx-background-color: #ecf0f1;" xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fooddelivery.fooddeliveryapp.LoginController">
    <VBox alignment="CENTER" spacing="15" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0">
        <padding>
            <Insets bottom="40" left="20" right="20" top="40" />
        </padding>

        <Label style="-fx-font-size: 24px; -fx-font-weight: bold;" text="Login" />
        <TextField fx:id="txtUsername" prefWidth="280" promptText="Username" />
        <PasswordField fx:id="txtPassword" prefWidth="280" promptText="Password" />
        <Button onAction="#handleLogin" prefWidth="280" text="Login" />
        <Label fx:id="lblError" style="-fx-text-fill: red;" />
        <ComboBox fx:id="roleSelector" prefWidth="300" promptText="Select Role" />

    </VBox>
</AnchorPane>
